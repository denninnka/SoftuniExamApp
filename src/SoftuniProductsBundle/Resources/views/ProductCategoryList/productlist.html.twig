{% extends 'base.html.twig' %}
{% block body %}
    <h1>Product list</h1>
    <h2>{{ productCategory.title }}</h2>
    <h3>{{ productCategory.description }}</h3>
    <table>
        <thead>
        <tr>
            <th>Title</th>
            <th>Image</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}

                {% set link=url('product_view', {id:product.id}) %}

            <tr>

                <td><a href="{{ link }}">{{ product.title }}</a></td>
                <td>{% if product.image %}
                        <a href="{{ link }}"><img src="{{ asset('uploads/product/' ~ product.image) }}" width="200" height="200" /></a>
                    {% endif %}
                <td>

            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}